<% title = blog.title; active = 'blogs'; %>

<div class="blog-detail-container">
  <div class="blog-content-glass">
    <h1><%= blog.title %></h1>
    <div style="white-space: pre-wrap;"><%= blog.content %></div>
    
    <div class="blog-actions-minimal" style="margin-top: 2rem;">
      <a href="/blogs/<%= blog._id %>/edit" class="minimal-btn-small edit-btn">Edit</a>
      <button type="button" class="minimal-btn-small delete-btn" 
              data-bs-toggle="modal" 
              data-bs-target="#deleteModal" 
              data-blog-id="<%= blog._id %>" 
              data-blog-title="<%= blog.title %>">
        Delete
      </button>
    </div>
  </div>

  <div class="comments-section-glass">
    <h4>Comments</h4>
    
    <ul class="comments-list">
      <% blog.comments.forEach((comment, index) => { %>
        <li class="comment-item-glass">
          <%= comment %>
          <div class="comment-actions">
            <a href="/blogs/<%= blog._id %>/comments/<%= index %>/edit" class="minimal-btn-small">Edit</a>
            <form action="/blogs/<%= blog._id %>/comments/<%= index %>?_method=DELETE" method="POST" class="delete-form-minimal">
              <button type="submit" class="minimal-btn-small delete">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>

    <form action="/blogs/<%= blog._id %>/comments" method="POST" class="comment-form-glass">
      <div class="form-group-minimal">
        <label for="comment" class="form-label-minimal">Add a Comment</label>
        <input type="text" id="comment" name="comment" class="minimal-input" required>
      </div>
      <button type="submit" class="minimal-btn submit">Submit</button>
    </form>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content glass-modal">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the blog post "<span id="blogTitle"></span>"?</p>
        <p>This action cannot be undone.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form id="deleteForm" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
// Handle delete modal
document.addEventListener('DOMContentLoaded', function() {
  const deleteModal = document.getElementById('deleteModal');
  deleteModal.addEventListener('show.bs.modal', function (event) {
    const button = event.relatedTarget;
    const blogId = button.getAttribute('data-blog-id');
    const blogTitle = button.getAttribute('data-blog-title');
    
    const modalTitle = deleteModal.querySelector('#blogTitle');
    const deleteForm = deleteModal.querySelector('#deleteForm');
    
    modalTitle.textContent = blogTitle;
    deleteForm.action = `/blogs/${blogId}?_method=DELETE`;
  });
});
</script>