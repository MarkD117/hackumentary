<div class="minimal-container">
  <h1 class="minimal-heading">Create a New Blog Post</h1>
  <form action="/blogs" method="POST" class="minimal-form">
    <div class="form-group-minimal">
      <label class="form-label-minimal">Title</label>
      <input type="text" name="title" class="minimal-input" required>
    </div>
    <div class="form-group-minimal">
      <label class="form-label-minimal">Content</label>
      <textarea name="content" class="minimal-textarea" rows="8" required></textarea>
    </div>
    <button type="submit" class="minimal-btn submit">Publish</button>
  </form>
</div>